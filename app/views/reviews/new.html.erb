
<h1 class="text-center">Add a review for <%= @restaurant.name %> :</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (0..5).to_a %>
        <%= f.submit "Add a review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>



